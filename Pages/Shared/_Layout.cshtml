<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Distribution System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        :root {
            --nav-bg: #1e293b; /* Dark Blue-Gray */
            --nav-hover: #334155;
            --accent-color: #38bdf8; /* Light Blue */
        }

        body {
            background-color: darkblue;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: var(--nav-bg) !important;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            padding: 0.8rem 1rem;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            z-index: 1000; /* Overlap content */
            padding-top: 56px; /* Space for a top bar if you add one later */
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: 1px;
            color: var(--accent-color) !important;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .nav-link {
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px; /* Icon ekath ekka thiyena gap eka */
        }

            .nav-link:hover {
                background-color: var(--nav-hover);
                color: var(--accent-color) !important;
            }

        .nav-item {
            margin: 0 2px;
        }

        /* Active link color */
        .nav-link.active {
            background-color: var(--nav-hover);
            color: var(--accent-color) !important;
        }

    </style>
</head>
<body>
    <nav id="vertical-nav" class="col-md-3 col-lg-2 bg-dark sidebar">
        <div class="position-sticky pt-3">
            <a class="navbar-brand border-bottom" href="/>
">
                <i class="bi bi-box-seam-fill"></i> Distribution System
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse d-md-block navbar-collapse" id="sidebarMenu">
                <ul class="navbar-nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/Customers"><i class="bi bi-people"></i> Customers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Sales"><i class="bi bi-cart-check"></i> Sales</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Purchases"><i class="bi bi-bag-plus"></i> Purchases</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Returns"><i class="bi bi-arrow-left-right"></i> Returns</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Payments"><i class="bi bi-cash-stack"></i> Payments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Reports"><i class="bi bi-graph-up-arrow"></i> Reports</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>